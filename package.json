{
  "name": "kersplunk",
  "version": "0.0.2",
  "description": "Splunk logging for JavaScript",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "preversion": "npm run build:all",
    "postversion": "echo 'Now run:\ngit push --follow-tags && npm publish'",
    "build:all": "npm run lint && npm run test && npm run build",
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "lint": "tslint -t stylish --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getsaf/kersplunk.git"
  },
  "keywords": [
    "Splunk",
    "logging",
    "javascript"
  ],
  "author": "Brandon Domingue <getsaf@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/getsaf/kersplunk/issues"
  },
  "homepage": "https://github.com/getsaf/kersplunk#readme",
  "devDependencies": {
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^24.0.11",
    "jest": "^24.5.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1"
  },
  "jest": {
    "clearMocks": true,
    "resetMocks": true,
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
